<Window x:Class="DesktopContactApp.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactApp"
        mc:Ignorable="d"
        Title="ContactDetailsWindow" Height="500" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="nameTextBox" Grid.Row="0" Margin="0,5,0,0"/>
        <TextBox x:Name="phoneNumberTexBox" Grid.Row="1" Margin="0,5,0,0"/>
        <TextBox x:Name="emailTextBox" Grid.Row="2" Margin="0,5,0,0"/>
        <Button Content="Update" Grid.Row="3" Margin="0,5,0,0" Click="UpdateButton_Clicked"/>
        <Button Content="Delete" Grid.Row="4" Margin="0,5,0,0" Click="DeleteButton_Clicked"/>
    </Grid>
</Window>
