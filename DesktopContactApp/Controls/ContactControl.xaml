<UserControl x:Class="DesktopContactApp.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopContactApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300">
    <Grid Background="#AAE5e5e5">
        <StackPanel Margin="5">
            <TextBlock FontSize="20" Text="{Binding Name}" FontWeight="Bold" x:Name="nameTextBlock"/>
            <TextBlock FontSize="15" Text="{Binding Email}" Foreground="DodgerBlue" x:Name="emailTextBlock"/>
            <TextBlock FontSize="15" Text="{Binding Phone}" FontStyle="Italic" x:Name="phoneTextBlock"/>
        </StackPanel>
    </Grid>
</UserControl>
